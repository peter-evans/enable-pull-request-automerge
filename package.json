{
  "name": "enable-pull-request-automerge",
  "version": "1.0.0",
  "private": true,
  "description": "A GitHub action to enable auto-merge on a pull request",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "test": "jest --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peter-evans/enable-pull-request-automerge.git"
  },
  "keywords": [
    "actions",
    "pull",
    "request",
    "automerge"
  ],
  "author": "Peter Evans",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peter-evans/enable-pull-request-automerge/issues"
  },
  "homepage": "https://github.com/peter-evans/enable-pull-request-automerge",
  "dependencies": {
    "@actions/core": "1.6.0",
    "@octokit/core": "3.5.1"
  },
  "devDependencies": {
    "@types/jest": "27.4.0",
    "@types/node": "17.0.12",
    "@typescript-eslint/parser": "5.10.1",
    "@vercel/ncc": "0.33.1",
    "eslint": "8.7.0",
    "eslint-plugin-github": "4.3.5",
    "eslint-plugin-jest": "26.0.0",
    "jest": "27.4.7",
    "jest-circus": "27.4.6",
    "js-yaml": "4.1.0",
    "prettier": "2.5.1",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5"
  }
}
